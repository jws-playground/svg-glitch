---
import Layout from '@layouts/Layout.astro';
const gh = 'https://github.com/jws-playgrounds/svg-glitch';
const title = 'svg-glitch';
---

<Layout pageId='top' gh={gh} title={title}>
  <div class='p_top'>
    <h1>Glitch</h1>
    <svg>
      <filter
        id='glitch'
        class='glitchFilter'
        x='0%'
        y='0%'
        width='100%'
        height='100%'
      >
        <feTurbulence
          type='fractalNoise'
          baseFrequency='0 0.000001'
          result='NOISE'
          numOctaves='2'></feTurbulence>
        <feDisplacementMap
          in='SourceGraphic'
          in2='NOISE'
          scale='30'
          xChannelSelector='R'
          yChannelSelector='R'></feDisplacementMap>
      </filter>
    </svg>
  </div>
</Layout>
